rows = int(input("Enter row: "))
cols = int(input("Enter col: "))

matrix = []

for i in range(rows):
    print("Row", i+1)
    row_list = []
    for j in range(cols):
        number = float(input("Enter number" + str(j+1) + ": "))
        row_list.append(number)
    matrix.append(row_list)

search_value = float(input("Search: "))

print("The numbers are:")
print()
for row in matrix:
    print(" ".join(f"{num:.1f}" for num in row))

positions = []
for i, row in enumerate(matrix):
    for j, value in enumerate(row):
        if value == search_value:
            positions.append((i, j))

if positions:
    position_strings = []
    for row, col in positions:
        position_strings.append("Row " + str(row+1) + ", Col " + str(col+1))
    
    print("Number", search_value, "found at", " and ".join(position_strings) + ".")
else:
    print("Number", search_value, "not found in the matrix.")
